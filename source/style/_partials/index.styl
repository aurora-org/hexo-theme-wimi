#posts-list
  padding: $post-list-padding
  
  .post-item
    display: block
    box-sizing: border-box
    padding: 20px
    margin: 0 0 20px 0
    border-bottom: 1px solid #eee

    .a-block
      color: black
      text-decoration: none

      .post-item-title
        font-size: 1.5em
        width: 400px
        overflow: hidden
        white-space: nowrap
        text-overflow: ellipsis
        word-break: break-all

      .post-item-summary
        font-size: 1em

      .post-item-meta
        font-size: 1em